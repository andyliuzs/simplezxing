<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义noActionBar-->
    <style name="MyNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--返回键颜色-->
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorAccent">#000000</item>-->
        <item name="android:textColorPrimary">#000000</item>
        <!--<item name="android:background">#FFFFFF</item>-->

        <item name="colorPrimary">#05afe8</item>
        <item name="colorControlActivated">#05afe8</item>

        <item name="android:colorPrimary">#05afe8</item>
        <item name="android:colorControlActivated">#05afe8</item>
        <item name="android:colorAccent">#05afe8</item>
        <item name="colorAccent">#05afe8</item>
    </style>

</resources>